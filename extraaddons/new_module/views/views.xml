    <record id="view_product_form" model="ir.ui.view">

        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="model">product.template</field>

        <field name="arch" type="xml">

            <field name="type" position="after">

              <field name="calories"  attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
              <field name="fat"  attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
              <field name="servingSize"  attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
              <field name="lastUpdate"  attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>

            </field>

        </field>
    </record>

    <record id="view_product_tree" model="ir.ui.view">

        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="model">product.template</field>

        <field name="arch" type="xml">

            <field name="list_price" position="after">

              <field name="calories"/>
              <field name="fat"/>
              <field name="servingSize"/>
              <field name="lastUpdate"/>

            </field>

        </field>
    </record>


