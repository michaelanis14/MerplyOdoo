<odoo>
  <data>

    <record model="ir.ui.view" id="project_form">
          <field name="name">Project Form</field>
          <field name="model">project.main</field>
          <!--field name="view_type">form</field-->
          <field name="arch" type="xml">

                  <form>

                      <group>
                          <group>
                            <field name="consignee"/>
                          </group>

                           <group>
                               <field name="mawb"/>
                               <field name="hawb"/>
                               <field name="date"/>
                          </group>

                      </group>

                      <notebook>
                          <page string="Cargo Info">
                                <field name="cargo_connector" widget="one2many_list">
                                    <tree string="Cargos" editable="bottom">
                                      <field name="delivery_order"/>
                                      <field name="no_of_packages"/>
                                      <field name="gross_weight"/>
                                      <field name="net_weight"/>
                                    </tree>
                                </field>
                          </page>

                            <page string="Charges Info">
                                <field name="charges_connector" widget="one2many_list">
                                    <tree string="Charges" editable="bottom">
                                      <field name="charge_name"/>
                                      <field name="charge_value"/>
                                    </tree>
                                </field>
                          </page>
                      </notebook>

                      <group>
                        <group>
                          <field name="destination_airport"/>
                          <field name="departure_airport"/>
                        </group>
                        <group>
                          <field name="totalCharges"/>
                        </group>
                      </group>

                  </form>
            </field>
        </record>


    <record model="ir.ui.view" id="consignee_form">
          <field name="name">Meal Form</field>
          <field name="model">consignee.info</field>
          <!--field name="view_type">form</field-->
          <field name="arch" type="xml">

                  <form>

                      <group>
                          <group>
                            <field name="consignee_name"/>
                            <field name="consignee_street1"/>
                            <field name="consignee_street2"/>
                            <field name="consignee_state"/>
                            <field name="consignee_city"/>
                            <field name="consignee_country"/>
                          </group>

                           <group>
                               <field name="consignee_tel"/>
                               <field name="consignee_fax"/>
                               <field name="consignee_email"/>
                               <field name="consignee_salesperson"/>
                          </group>
                      </group>

                  </form>
            </field>
        </record>

    <record id="project_main_menu_action" model="ir.actions.act_window">
            <field name="name"> Project </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.main</field>
            <field name="view_mode">form,tree,kanban</field>
            <!--field name="view_type">form</field-->
            <field name="help" type="html">

                <p class="oe_view_nocontent_create">

                    Click to add the bill details
                </p>
            </field>
        </record>


    <menuitem
            id="project_main_menu"
            name="Project"
            sequence="10"
            action="project_main_menu_action"/>

