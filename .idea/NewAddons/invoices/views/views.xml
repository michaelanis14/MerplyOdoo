<odoo>
  <data>

  <record model="ir.ui.view" id="invoices.list">
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">

          <field name="date_invoice" position="before">
              <field name="consignee_name"/>
          </field>

          <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
              <field name="package_no" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
              <field name="net_weight" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='net_weight']" position="after">
              <field name="gross_weight" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page[@name='other_info']/group/group/field[@name='fiscal_position_id']" position="before">
             <field name="mawb" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page[@name='other_info']/group/group/field[@name='move_id']" position="before">
              <field name="hawb" />
          </xpath>


          <xpath expr="/form/sheet/notebook/page[@name='other_info']" position='after'>

               <page string='Charges Info'>

                   <group>
                       <group>

                           <field name="freight_charges"/>
                           <field name="discharge_expenses" />

                       </group>
                       <group>

                            <field name="exw" />
                           <field name="fob" />

                       </group>
                   </group>

               </page>

           </xpath>
           <!-- <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
              <field name="package_no" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
              <field name="net_weight" />
          </xpath>

          <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='net_weight']" position="after">
              <field name="gross_weight" />
          </xpath>

          <xpath expr="//field[@name='product_id']" position="attributes">
              <attribute name="string">Delivered Order</attribute>
          </xpath>



           -->

      </field>
    </record>








