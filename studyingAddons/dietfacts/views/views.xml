<odoo>
  <data>
        <!-- explicit list view definition-->

            <!-- for Dietfacts-->
      <record model="ir.ui.view" id="dietfacts.form">
          <field name="name">dietfacts list</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_only_form_view"/>
          <field name="arch" type="xml">


            <field name="type" position="after">
              <field name="calories"/>
              <field name="serving_size"/>
              <field name="last_update"/>
            </field>

           <field name="barcode" position="after">
              <field name="dietitem"/>

           </field>
          </field>
        </record>

      <record model="ir.ui.view" id="dietfacts.tree">
          <field name="name">dietfacts list</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_tree_view"/>
          <field name="arch" type="xml">
            <!--tree>
              <field name="calories"/>
              <field name="value"/>
              <field name="value2"/>
            </tree-->

            <field name="list_price" position="after">
              <field name="calories"/>
              <field name="serving_size"/>
              <field name="dietitem"/>
            </field>
          </field>
        </record>
      <!-- *******************************************************************************-->


            <!-- for Meals-->
      <record model="ir.ui.view" id="meal_form">
          <field name="name">Meal Form</field>
          <field name="model">users.meals</field>
          <!--field name="view_type">form</field-->
          <field name="arch" type="xml">

                  <form>

                      <group>
                          <group>
                              <field name="mealName"/>
                              <field name="mealDate"/>
                          </group>

                           <group>
                               <field name="mealUser"/>
                               <field name="totalMealCalories"/>
                          </group>
                      </group>


                      <notebook>
                          <page string="Meal Items">
                                <field name="mealItems" widget="one2many_list">
                                    <tree string="Items" editable="bottom">
                                        <field name="selecteMealIteams"/>
                                        <field name="servings"/>
                                        <field name="itemCalories"/>
                                    </tree>
                                </field>
                          </page>
                      </notebook>

                  </form>
            </field>
        </record>

      <record model="ir.ui.view" id="meal_tree">
          <field name="name">Meal Tree</field>
          <field name="model">users.meals</field>
          <!--field name="view_type">tree</field-->
          <field name="arch" type="xml">

              <tree string="Items" editable="bottom">
                  <field name="mealUser"/>
                  <field name="mealName"/>
                  <field name="totalMealCalories"/>
                  <field name="mealDate"/>

              </tree>
            </field>
        </record>

      <record model="ir.ui.view" id="meal_kanban">
        <field name="name">Meal kanban</field>
        <field name="model">users.meals</field>
        <field name="arch" type="xml">
            <kanban>
                 <field name="mealUser"/>
                  <field name="mealName"/>
                  <field name="totalMealCalories"/>
                  <field name="mealDate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_small')"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="mealName"/>
                                </strong>

                                <div name="tags"/>
                                   <strong>
                                    <span>User: <field name="mealUser"/></span>
                                </strong>

                                <div name="tags"/>
                                   <strong>
                                    <span>Total calories: <field name="totalMealCalories"/></span>
                                </strong>

                                <div name="tags"/>
                                   <strong>
                                    <span>Meal Date: <field name="mealDate"/></span>
                                </strong>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
      <!-- *******************************************************************************-->

            <!-- for Actions-->
      <record id="dietfacts_menu_action" model="ir.actions.act_window">
            <field name="name"> Diet Foods </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_tree_view"/>
            <field name="context">{"search_default_filter_to_sell":1, "default_dietitem": True}</field>
            <field name="domain">[("dietitem", "=", True)]</field>
            <field name="help" type="html">

                <p class="oe_view_nocontent_create">

                    Click to add new Diet Foods
                </p>
            </field>
        </record>

      <record id="meals_menu_action" model="ir.actions.act_window">
            <field name="name"> Meals </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">users.meals</field>
            <field name="view_mode">tree,form,kanban</field>
            <!--field name="view_type">form</field-->
            <field name="help" type="html">

                <p class="oe_view_nocontent_create">

                    Click to add new Meal
                </p>
            </field>
        </record>
      <!-- *******************************************************************************-->

            <!-- for Menus-->
      <menuitem
            id ="meals_menu"
            action = "meals_menu_action"
            parent="sales_team.menu_sales"
            sequence = "15"/>
      <menuitem
            id ="dietfacts_menu"
            action = "dietfacts_menu_action"
            parent="sales_team.menu_sales"
            sequence = "14"/>
